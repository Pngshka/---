import Utilities from './Utilities.js'

export class FigureFactory {
    figures = {};

    constructor(){}

    construct(type) {
        const stringTypeName = type.name;
        if (this.figures[stringTypeName] !== undefined) 
            return this.figures[stringTypeName].pop();
        
        this.figures[stringTypeName] = [];
        return new type();
    }

    deconstruct(figures) {
        figures.forEach(element => {
            const stringTypeName = element.constructor.name;
            this.figures[stringTypeName].push(element);
        });
        //this.figures.push(...figures);
    }

}